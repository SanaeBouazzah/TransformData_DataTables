{% extends 'base.html.twig' %}
{% block title %}Registration{% endblock %}
{% block body %}
	<div class="main-registration">
		<div class="main">
			<input type="checkbox" id="chk" aria-hidden="true">

			<div class="signup">
				<form>
					<label class="label" for="chk" aria-hidden="true" id="signup">Sign up</label>
					<input class="input-field" type="text" name="txt" placeholder="User name" required="">
					<input class="input-field" type="email" name="email" placeholder="Email" required="">
					<input class="input-field" type="number" name="broj" placeholder="BrojTelefona" required="">
					<input class="input-field" type="password" name="pswd" placeholder="Password" required="">
					<button class="mybutton">Sign up</button>
				</form>
			</div>

			<div class="login">
				<form action="{{ path('app_login') }}" method="post">
					<label class="label" for="chk" aria-hidden="true" id="login">Login</label>
					<input class="input-field" type="text" id="username" name="_username" value="{{ last_username }}" required placeholder="Username...">
					<input class="input-field" type="password" id="password" name="_password" required placeholder="Password...">
					<input type="hidden" name="_target_path" value="{{path('app_user_index')}}">
					<button class="mybutton">Login</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
