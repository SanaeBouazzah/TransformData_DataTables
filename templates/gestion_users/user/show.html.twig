{% extends 'layout/index.html.twig' %}

{% block title %}{{ app.user.username }}{% endblock %}

{% block content %}
    <h1>User</h1>

   <div id="UserContainer">
        <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ user.position }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.adresse }}</td>
            </tr>
            <tr>
                <th>Tel1</th>
                <td>{{ user.Tel1 }}</td>
            </tr>
            <tr>
                <th>Tel2</th>
                <td>{{ user.Tel2 }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ user.dateCreation ? user.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateDeletion</th>
                <td>{{ user.dateDeletion ? user.dateDeletion|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
   </div>

    <a href="{{ path('app_user_index') }}">back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('gestion_users/user/_delete_form.html.twig') }}
{% endblock %}
